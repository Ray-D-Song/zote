{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
    "lib": ["DOM"],

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"],
      "@/*": ["src/*"]
		}
	},
	"include": ["node_modules/vite/client.d.ts", "**/*"]
}
